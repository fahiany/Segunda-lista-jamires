#include <stdio.h>
#include <stdlib.h>

int main() {
    int numero;
    printf("Informe o número:\n");
    scanf("%d", &numero);

    if (numero % 2 == 0) {
        printf("O número é par \n");
    } else {
        printf("O número é ímpar \n");
        numero = numero * 3;  
        printf("O triplo é: %d\n", numero);
    }

    system("pause");
    return 0;
}
